<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="loggers.xml"/>

    <bean id="client" class="com.course.spring.core.beans.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="Spring Frameworkovi4"/>
    </bean>

    <bean id="app" class="com.course.spring.core.App">
        <constructor-arg ref="client"/>
        <!--<constructor-arg ref="consoleEventLogger"/>-->
        <!--<constructor-arg ref="fileEventLogger"/>-->
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

</beans>
