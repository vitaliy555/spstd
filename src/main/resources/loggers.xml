<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleEventLogger" class="com.course.spring.core.loggers.impl.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.course.spring.core.loggers.impl.FileEventLogger" init-method="init">
        <constructor-arg value="C:/myTest.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.course.spring.core.loggers.impl.CacheFileEventLogger"
          destroy-method="destroy" parent="fileEventLogger">
        <constructor-arg value="10"/>
    </bean>

    <bean id="event" class="com.course.spring.core.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

</beans>
